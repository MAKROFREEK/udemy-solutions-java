public class IsItOddOrNah {

    public static void main(String[] args) {
    System.out.println(isOdd(4));
    }

    public static boolean isOdd(int number) {
        if (!number == 0) {
            return false;
        } else (number % 2 == 0);
        return true;
        } else {
            return false;
        }
    }


}